<table>
	<thead>
		<tr>
		   <th>Name</th>
		   <th>Balance</th>
		</tr>
	</thead>

	<tbody>
		{{#if items.isPending}}
		  <tr><td>Loading</td></tr>
		{{/if}}

		{{#if items.isResolved}}
		  {{#items.value}}
	  		<tr>
	  		   <td>{{name.first}} {{name.last}}</td>
	  		   <td>{{balance}}</td>
	  		</tr>
  		{{/items.value}}
		{{/if}}
	</tbody>
</table>